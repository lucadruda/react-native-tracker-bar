{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react-native",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "strict": true,
    "module": "commonjs",
    "target": "es2017",
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}